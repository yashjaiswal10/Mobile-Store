<%- include ('./header') %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%- mobile.name%></h1>
        <div style="width:30%;margin:20px auto">
            <form action="/mobiles/<%=mobile._id%>" method="Post">
                <div class="form-group">
                    <input class="form-control" name="mobile[name]" type ="text" value="<%=mobile.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="mobile[image]" type ="text" value="<%=mobile.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="mobile[description]" type ="text" value="<%=mobile.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block"> Submit</button>
                </div>


            </form>
            <a href="/mobiles">Go Back</a>
        </div>

    </div>
</div>
<%- include ('./footer') %>
